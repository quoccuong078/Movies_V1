@model List<Movies_V1.Models.Episode>

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_LayoutHomePage.cshtml";
}

<style>
    .movie-banner video {
        width: 100%;
        max-width: 720px;
        height: auto;
        border-radius: 8px;
        position: relative;
        z-index: 1;
    }

    .movie-banner .video-container {
        position: relative;
        display: inline-block;
    }

    .video-overlay-content {
        position: absolute;
        bottom: 20px;
        left: 20px;
        z-index: 2;
        color: white;
    }

    .btn-custom {
        margin-right: 10px;
    }

    .episode-card {
        background: #242121;
        border: 2px solid #ffffff;
        border-radius: 8px;
        width: 100px;
        height: 50px;
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 5px;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .episode-card:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 8px rgba(255, 255, 255, 0.1);
        }

        .episode-card a {
            text-decoration: none;
            color: #ffffff;
            font-size: 16px;
            font-weight: bold;
            text-transform: uppercase;
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
        }

    .col-md-2 {
        padding: 5px;
    }

    .img-episode {
        width: 100%;
        aspect-ratio: 16 / 9;
        object-fit: cover;
        border-radius: 12px;
        display: block;
        transition: transform 0.3s ease;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    }

        .img-episode:hover {
            transform: scale(1.05);
        }

    .card-title {
        font-size: 16px;
        font-weight: bold;
        margin-bottom: 8px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        color: #ffffff;
    }

    .episode-list {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
    }

    .card {
        border: none;
        background: #242121;
        border-radius: 8px;
        margin: 5px;
    }

    .recommended-card {
        text-align: center;
        padding: 10px;
        background: #1a1a1a;
        border-radius: 12px;
        transition: transform 0.2s ease;
    }
        .recommended-card .img-episode {
            height: 200px; /* Chỉnh chiều cao ảnh */
            width: 100%; /* Chiều rộng ảnh theo vùng chứa */
            object-fit: cover; /* Đảm bảo ảnh không bị méo và cắt bớt nếu cần */
        }


        .recommended-card:hover {
            transform: scale(1.03);
            box-shadow: 0 6px 14px rgba(255, 255, 255, 0.2);
        }

        .recommended-card .btn-sm {
            font-size: 14px;
            padding: 6px 12px;
            border-radius: 6px;
            background: #ff4d4d;
            color: #ffffff;
            border: none;
            transition: background 0.2s ease;
        }

            .recommended-card .btn-sm:hover {
                background: #ff7878;
            }
</style>

<div class="movie-banner d-flex align-items-end">
    <div class="movie-overlay w-100">
        <div class="container">
            <div class="video-container">
                <div id="player"></div>
                <div class="video-overlay-content">
                    <h1 class="movie-title">Ngôi Trời Xa Sông</h1>
                    <div class="d-flex mb-3">
                        <button class="btn btn-light btn-custom" onclick="playVideo()">▶ Xem ngay</button>
                        <button class="btn btn-outline-light btn-custom">＋ Danh sách</button>
                    </div>
                </div>
            </div>
            <div class="row text-white mt-2">
                <div class="col-md-6">
                    <div class="movie-info mb-2">
                        <div class="d-flex align-items-center flex-wrap mb-1">
                            <span class="me-2">5.688.410 lượt xem</span> |
                            <span class="rating ms-2">
                                4.8
                                <i class="bi bi-star-fill">⭐</i>
                                <i class="bi bi-star-fill">⭐</i>
                                <i class="bi bi-star-fill">⭐</i>
                                <i class="bi bi-star-fill">⭐</i>
                                <i class="bi bi-star-fill">⭐</i>
                            </span>
                        </div>
                        <div class="d-flex flex-wrap">
                            <span class="me-2">1/14/2023 12:00:00 AM</span> |
                            <span class="mx-2">T13</span> |
                            <span class="mx-2">Việt Nam</span> |
                            <span class="mx-2">1 Phần</span> |
                            <span class="ms-2">Full HD</span>
                        </div>
                    </div>
                    <p>Phim kể về chuyện tình cảm động giữa hai người xa lạ, vượt qua mọi khó khăn để đến với nhau.</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Diễn viên:</strong> Trần Đô Linh, Tần Văn Lai, Hà Hoàng San, Dụ Ân Thái, Ôn Tranh Vanh, Vương Diễm, Lưu Húc Uy, Phó Tình, Lý Thạnh</p>
                    <p><strong>Đạo diễn:</strong> Dương Long</p>
                    <p><strong>Thể loại:</strong> Phim tình cảm</p>
                </div>
                <h4 class="row gx-2 gy-3">Danh sách tập phim</h4>
                <div class="episode-list">
                    @if (Model != null && Model.Any())
                    {
                        foreach (var ep in Model)
                        {
                            <div class="episode-card">
                                <a href="@ep.WatchUrl" title="@ep.Title">@ep.Title</a>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-white">Hiện tại chưa có tập phim nào.</p>
                    }
                </div>
                <h4 class="row gx-2 gy-3 mt-4">Gợi ý phim</h4>
                <div class="row">
                    @if (ViewBag.RecommendedMovies != null)
                    {
                        foreach (var movie in ViewBag.RecommendedMovies)
                        {
                            <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                                <div class="card bg-dark text-white recommended-card">
                                    <a href="@movie.WatchUrl">
                                        <img src="@movie.ThumbnailUrl" alt="@movie.Title" class="img-episode" />
                                    </a>
                                    <div class="card-body text-center px-2 py-2">
                                        <h6 class="card-title text-truncate" title="@movie.Title">@movie.Title</h6>
                                        <a href="@movie.WatchUrl" class="btn btn-sm mt-1">Xem ngay</a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-white">Hiện tại chưa có phim gợi ý nào.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Thêm script để nhúng YouTube API và điều khiển video
    var player;
    function onYouTubeIframeAPIReady() {
        player = new YT.Player('player', {
            height: '400',
            width: '300',
            videoId: 'DrY_K0mT-As', // Thay thế VIDEO_ID bằng ID của video YouTube
            events: {
                'onReady': onPlayerReady,
                'onStateChange': onPlayerStateChange
            }
        });
    }

    function onPlayerReady(event) {
        event.target.playVideo(); // Tự động phát video khi player đã sẵn sàng
    }

    function onPlayerStateChange(event) {
        if (event.data == YT.PlayerState.ENDED) {
            alert("Video đã kết thúc!");
        }
    }

    function playVideo() {
        player.playVideo(); // Phát video khi nhấn nút "Xem ngay"
    }

    // Chờ API YouTube tải
    var tag = document.createElement('script');
    tag.src = "https://www.youtube.com/iframe_api";
    var firstScriptTag = document.getElementsByTagName('script')[0];
    firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);
</script>