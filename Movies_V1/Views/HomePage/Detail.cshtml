@model List<Movies_V1.Models.Episode>

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_LayoutHomePage.cshtml";
}

<style>
    .movie-banner video {
        width: 100%;
        max-width: 720px;
        height: auto;
        border-radius: 8px;
        position: relative;
        z-index: 1;
    }

    .movie-banner .video-container {
        position: relative;
        display: block;
        width: 100%;
        max-width: 1000px;
        margin: 0 auto;
    }

    #player {
        width: 100% !important;
        height: 600px !important;
    }

    .video-overlay-content {
        position: absolute;
        bottom: 20px;
        left: 20px;
        z-index: 2;
        color: white;
    }

    .btn-custom {
        margin-right: 10px;
    }

    .episode-card {
        background: #242121;
        border: 2px solid #ffffff;
        border-radius: 8px;
        width: 100px;
        height: 50px;
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 5px;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .episode-card:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 8px rgba(255, 255, 255, 0.1);
        }

        .episode-card a {
            text-decoration: none;
            color: #ffffff;
            font-size: 16px;
            font-weight: bold;
            text-transform: uppercase;
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
        }

    .col-md-2 {
        padding: 5px;
    }

    .img-episode {
        width: 100%;
        aspect-ratio: 16 / 9;
        object-fit: cover;
        border-radius: 12px;
        display: block;
        transition: transform 0.3s ease;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    }

        .img-episode:hover {
            transform: scale(1.05);
        }

    .card-title {
        font-size: 16px;
        font-weight: bold;
        margin-bottom: 8px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        color: #ffffff;
    }

    .episode-list {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
    }

    .card {
        border: none;
        background: #242121;
        border-radius: 8px;
        margin: 5px;
    }

    .recommended-card {
        text-align: center;
        padding: 10px;
        background: #1a1a1a;
        border-radius: 12px;
        transition: transform 0.2s ease;
    }

        .recommended-card .img-episode {
            height: 200px;
            width: 100%;
            object-fit: cover;
        }

        .recommended-card:hover {
            transform: scale(1.03);
            box-shadow: 0 6px 14px rgba(255, 255, 255, 0.2);
        }

        .recommended-card .btn-sm {
            font-size: 14px;
            padding: 6px 12px;
            border-radius: 6px;
            background: #ff4d4d;
            color: #ffffff;
            border: none;
            transition: background 0.2s ease;
        }

            .recommended-card .btn-sm:hover {
                background: #ff7878;
            }

    .custom-movie-card {
        background: #242121;
        border-radius: 8px;
        overflow: hidden;
        width: 200px;
        margin: 5px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        transition: transform 0.2s ease;
    }

        .custom-movie-card:hover {
            transform: scale(1.03);
        }

        .custom-movie-card img {
            width: 100%;
            height: auto;
            display: block;
        }

        .custom-movie-card .card-content {
            padding: 10px;
            color: #ffffff;
            text-align: center;
        }

            .custom-movie-card .card-content h4 {
                margin: 0;
                font-size: 18px;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
            }

            .custom-movie-card .card-content .rating {
                font-size: 14px;
                color: #ccc;
            }

                .custom-movie-card .card-content .rating .star {
                    color: #ffd700;
                    margin-left: 5px;
                }
</style>

<div class="movie-banner d-flex align-items-end">
    <div class="movie-overlay w-100">
        <div class="container">
            <div class="video-container">
                <iframe id="player"
                        src="@ViewBag.VideoUrl"
                        width="100%"
                        height="600"
                        frameborder="0"
                        allowfullscreen>
                </iframe>
                <div class="video-overlay-content">
                    <h1 class="movie-title">@ViewBag.MovieTitle</h1>
                    <div class="d-flex mb-3">
                        <a class="btn btn-light btn-custom" href="@Url.Action("Watch", "HomePage", new { videoUrl = ViewBag.VideoUrl, movieTitle = ViewBag.MovieTitle })">▶ Xem ngay</a>
                        <button class="btn btn-outline-light btn-custom">＋ Danh sách</button>
                    </div>
                </div>
            </div>
            <div class="row text-white mt-2">
                <div class="col-md-6">
                    <div class="movie-info mb-2">
                        <div class="d-flex align-items-center flex-wrap mb-1">
                            <span class="me-2">5.688.410 lượt xem</span> |
                            <span class="rating ms-2">
                                4.8
                                <i class="bi bi-star-fill">⭐</i>
                                <i class="bi bi-star-fill">⭐</i>
                                <i class="bi bi-star-fill">⭐</i>
                                <i class="bi bi-star-fill">⭐</i>
                                <i class="bi bi-star-fill">⭐</i>
                            </span>
                        </div>
                        <div class="d-flex flex-wrap">
                            <span class="me-2">1/14/2023 12:00:00 AM</span> |
                            <span class="mx-2">T13</span> |
                            <span class="mx-2">Việt Nam</span> |
                            <span class="mx-2">1 Phần</span> |
                            <span class="ms-2">Full HD</span>
                        </div>
                    </div>
                    <p>Phim kể về chuyện tình cảm động giữa hai người xa lạ, vượt qua mọi khó khăn để đến với nhau.</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Diễn viên:</strong> Trần Đô Linh, Tần Văn Lai, Hà Hoàng San, Dụ Ân Thái, Ôn Tranh Vanh, Vương Diễm, Lưu Húc Uy, Phó Tình, Lý Thạnh</p>
                    <p><strong>Đạo diễn:</strong> Dương Long</p>
                    <p><strong>Thể loại:</strong> Phim tình cảm</p>
                </div>

                <h4 class="row gx-2 gy-3">Danh sách tập phim</h4>
                <div class="episode-list">
                    @if (Model != null && Model.Any())
                    {
                        foreach (var ep in Model)
                        {
                            <div class="episode-card">
                                <a href="@Url.Action("Watch", "HomePage", new { videoUrl = ep.LinkEmbed, movieTitle = ep.Title })" title="@ep.Title">@ep.Title</a>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-white">Hiện tại chưa có tập phim nào.</p>
                    }
                </div>

                <h4 class="row gx-2 gy-3 mt-4">Gợi ý phim</h4>
                <div class="row">
                    @if (ViewBag.RecommendedMovies != null)
                    {
                        foreach (var movie in ViewBag.RecommendedMovies)
                        {
                            <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                                <div class="card bg-dark text-white recommended-card">
                                    <a href="@movie.WatchUrl">
                                        <img src="@movie.ThumbnailUrl" alt="@movie.Title" class="img-episode" />
                                    </a>
                                    <div class="card-body text-center px-2 py-2">
                                        <h6 class="card-title text-truncate" title="@movie.Title">@movie.Title</h6>
                                        <a href="@movie.WatchUrl" class="btn btn-sm mt-1">Xem ngay</a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-white">Hiện tại chưa có phim gợi ý nào.</p>
                    }

                    <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                        <div class="custom-movie-card">
                            <img src="https://contente.vn/uploads/images/korean-movie-poster.jpg" alt="Bà Chúa Trời" />
                            <div class="card-content">
                                <h4>Bà Chúa Trời</h4>
                                <div class="rating">
                                    <span>7.8</span>
                                    <span class="star">⭐</span>
                                    <span>2024</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>